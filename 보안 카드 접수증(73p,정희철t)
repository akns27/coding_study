#include <stdio.h>

int main() {
  char name[21]; //이름(문자열 형) 10글자 이내
  int age;       //나이(정수형)
  char code;     //부서코드(문자형, 1글자, 알파벳)
  float secure;  //보안키 실수형
  printf("이름을 입력하세요:");
  scanf("%s", name);
  printf("나이를 입력하세요:");
  scanf("%d", &age);
  fflush(stdin);
  printf("부서코드를 입력하세요:");
  scanf(" %c", &code);
  printf("보안키를 입력하세요:");
  scanf("%f", &secure);
  printf("*******************\n");
  printf("이름 : %s\n", name);
  printf("나이 : %d\n", age);
  printf("부서 : %c\n", code);
  printf("보안키 : %f\n", secure);
  printf("******************\n");
}
